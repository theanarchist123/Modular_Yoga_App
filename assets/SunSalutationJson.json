{
  "metadata": {
    "id": "asana_sun_salutation_v1",
    "title": "Sun Salutation Flow",
    "category": "full_body",
    "defaultLoopCount": 3,
    "tempo": "medium"
  },
  "assets": {
    "images": {
      "mountain": "Base.png",
      "forward_fold": "Cat.png", 
      "upward_dog": "Cow.png"
    },
    "audio": {
      "intro": "cat_cow_intro.mp3",
      "loop": "cat_cow_loop.mp3",
      "outro": "cat_cow_outro.mp3"
    }
  },
  "sequence": [
    {
      "type": "segment",
      "name": "intro",
      "audioRef": "intro",
      "durationSec": 25,
      "script": [
        {
          "text": "Stand tall in Mountain Pose. Feel your feet rooted to the earth, spine reaching toward the sky.",
          "startSec": 0,
          "endSec": 10,
          "imageRef": "mountain"
        },
        {
          "text": "Inhale, sweep your arms up overhead. Feel the energy rising through your body.",
          "startSec": 10,
          "endSec": 18,
          "imageRef": "upward_dog"
        },
        {
          "text": "Exhale, fold forward with grace. Let your hands reach toward the earth.",
          "startSec": 18,
          "endSec": 25,
          "imageRef": "forward_fold"
        }
      ]
    },
    {
      "type": "loop",
      "name": "sun_salutation_cycle",
      "audioRef": "loop",
      "durationSec": 12,
      "iterations": "{{loopCount}}",
      "loopable": true,
      "script": [
        {
          "text": "Inhale, rise up with open arms.",
          "startSec": 0,
          "endSec": 4,
          "imageRef": "upward_dog"
        },
        {
          "text": "Exhale, fold forward with intention.",
          "startSec": 4,
          "endSec": 8,
          "imageRef": "forward_fold"
        },
        {
          "text": "Flow with your breath, connecting earth and sky.",
          "startSec": 8,
          "endSec": 12,
          "imageRef": "forward_fold"
        }
      ]
    },
    {
      "type": "segment",
      "name": "outro",
      "audioRef": "outro",
      "durationSec": 15,
      "script": [
        {
          "text": "Return to Mountain Pose, feeling the energy you've created.",
          "startSec": 0,
          "endSec": 8,
          "imageRef": "mountain"
        },
        {
          "text": "Take a moment to honor your practice. You are grounded, you are strong.",
          "startSec": 8,
          "endSec": 15,
          "imageRef": "mountain"
        }
      ]
    }
  ]
}
