{
  "metadata": {
    "id": "asana_cat_cow_v1",
    "title": "Cat-Cow Flow",
    "category": "spinal_mobility",
    "defaultLoopCount": 4,
    "tempo": "slow",
    "description": "A gentle, flowing movement that creates mobility and awareness through the entire spine while coordinating breath with movement.",
    "benefits": [
      "Improves spinal flexibility and mobility",
      "Relieves tension in back and neck",
      "Strengthens core and improves posture",
      "Calms the mind and reduces stress",
      "Enhances breath awareness and coordination",
      "Prepares the body for deeper yoga poses"
    ]
  },
  "assets": {
    "images": {
      "base": "Base.png",
      "cat": "Cat.png",
      "cow": "Cow.png"
    },
    "audio": {
      "intro": "cat_cow_intro.mp3",
      "loop": "cat_cow_loop.mp3",
      "outro": "cat_cow_outro.mp3"
    }
  },
  "sequence": [
    {
      "type": "segment",
      "name": "intro",
      "audioRef": "intro",
      "durationSec": 32,
      "script": [
        {
          "text": "Come to all fours. Hands below shoulders, knees under hips. Feel the earth beneath you — steady, quiet, alive.",
          "startSec": 0,
          "endSec": 13,
          "imageRef": "base"
        },
        {
          "text": "Inhale… arch your spine, lift your heart. Let your chest open like sunlight breaking through leaves.",
          "startSec": 13,
          "endSec": 22,
          "imageRef": "cow"
        },
        {
          "text": "Exhale… round your back, tuck your chin. Feel the breath soften you like morning mist.",
          "startSec": 22,
          "endSec": 32,
          "imageRef": "cat"
        }
      ]
    },
    {
      "type": "loop",
      "name": "breath_cycle",
      "audioRef": "loop",
      "durationSec": 16,
      "iterations": "{{loopCount}}",
      "loopable": true,
      "script": [
        {
          "text": "Inhale… open, expand, shine.",
          "startSec": 0,
          "endSec": 5,
          "imageRef": "cow"
        },
        {
          "text": "Exhale… release, soften, ground.",
          "startSec": 5,
          "endSec": 10,
          "imageRef": "cat"
        },
        {
          "text": "Feel your spine flowing like a wave through the trees.",
          "startSec": 10,
          "endSec": 16,
          "imageRef": "cat"
        }
      ]
    },
    {
      "type": "segment",
      "name": "outro",
      "audioRef": "outro",
      "durationSec": 18,
      "script": [
        {
          "text": "Finish your final round… and return to a neutral spine.",
          "startSec": 0,
          "endSec": 5,
          "imageRef": "base"
        },
        {
          "text": "Notice the warmth in your back, the ease in your breath. You are supported — rooted, yet free.",
          "startSec": 5,
          "endSec": 18,
          "imageRef": "base"
        }
      ]
    }
  ]
}
